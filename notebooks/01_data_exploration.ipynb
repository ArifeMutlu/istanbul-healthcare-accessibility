# Cell 1 - Imports
import geopandas as gpd
import pandas as pd
import matplotlib.pyplot as plt
import folium
from shapely.geometry import Point

# Cell 2 - Veri yükleme
# İstanbul ilçe sınırlarını yükle
districts = gpd.read_file("../data/istanbul_districts.geojson")  
# veya mevcut dosya adın neyse onu kullan

print(f"Toplam ilçe sayısı: {len(districts)}")
print(f"CRS: {districts.crs}")
print(districts.head())

# Cell 3 - Sağlık tesisi verisi
hospitals = gpd.read_file("../data/healthcare_facilities.geojson")
# veya CSV'den:
# hospitals = pd.read_csv("../data/hospitals.csv")
# hospitals = gpd.GeoDataFrame(hospitals, 
#     geometry=gpd.points_from_xy(hospitals.longitude, hospitals.latitude),
#     crs="EPSG:4326")

print(f"Toplam sağlık tesisi: {len(hospitals)}")
print(hospitals.head())

# Cell 4 - Temel görselleştirme
fig, ax = plt.subplots(1, 1, figsize=(12, 10))
districts.plot(ax=ax, color='lightgray', edgecolor='black', linewidth=0.5)
hospitals.plot(ax=ax, color='red', markersize=10, alpha=0.7)
ax.set_title("İstanbul Sağlık Tesisleri Dağılımı", fontsize=14)
ax.set_axis_off()
plt.tight_layout()
plt.savefig("../outputs/maps/hospital_distribution.png", dpi=150, bbox_inches='tight')
plt.show()

# Cell 5 - İlçe bazlı hastane sayısı
hospital_counts = gpd.sjoin(hospitals, districts, how='left', predicate='within')
counts_per_district = hospital_counts.groupby('district_name').size().reset_index(name='hospital_count')
counts_per_district = counts_per_district.sort_values('hospital_count', ascending=False)

fig, ax = plt.subplots(figsize=(14, 6))
ax.barh(counts_per_district['district_name'], counts_per_district['hospital_count'])
ax.set_xlabel('Hastane Sayısı')
ax.set_title('İlçe Bazlı Hastane Sayıları')
plt.tight_layout()
plt.savefig("../outputs/charts/hospitals_per_district.png", dpi=150, bbox_inches='tight')
plt.show()

# Cell 6 - Temel istatistikler
print("=== Veri Özeti ===")
print(f"Toplam ilçe: {len(districts)}")
print(f"Toplam sağlık tesisi: {len(hospitals)}")
print(f"Ortalama tesis/ilçe: {len(hospitals)/len(districts):.1f}")
print(f"Hastanesi en çok ilçe: {counts_per_district.iloc[0]['district_name']}")
print(f"Hastanesi en az ilçe: {counts_per_district.iloc[-1]['district_name']}")
